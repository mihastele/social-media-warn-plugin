{
  "name": "Social Media Warning",
  "version": "1.0",
  "description": "Warns you when you visit Facebook or LinkedIn",
  "manifest_version": 2,
  "permissions": ["tabs"],
  "content_scripts": [
    {
      "matches": ["*://www.facebook.com/*", "*://www.linkedin.com/*"],
      "js": ["https://code.jquery.com/jquery-3.6.4.min.js",
        "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js",
        "content.js"],
      "css": ["https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"]
    }
  ]
}
